<mvc:View controllerName="com.transfieldservices.view.AllowancesDetail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" id="detailPage" navButtonPress="onNavBack" title="Timesheet Entry">
		<content>
			<ObjectHeader id="objectHeader" number="{Anzhl}" numberUnit="" title="{Atttxt}">
				<attributes>
					<ObjectAttribute text="{Lgarttxt}"/>
				</attributes>
				<firstStatus>
					<ObjectStatus text="{Statustxt}"/>
				</firstStatus>
			</ObjectHeader>
			<Panel>
				<FlexBox justifyContent="Center" width="100%">
					<!--<l:content>-->
					<items>
						<core:Icon class="size2" color="#64E4CE" src="sap-icon://favorite"/>
						<Label id="labelFav" text="Populate Form from Favourite"/>
						<Switch id="favSwitch" change="handleFavSelect" customTextOff="No" customTextOn="Yes" state="false"/>
					</items>
					<!--</l:content>-->
					<!--</l:HorizontalLayout>-->
				</FlexBox>
			</Panel>
			<f:SimpleForm id="detailForm" columnsM="1" columnsL="1" editable="false" emptySpanL="1" emptySpanM="1" labelSpanL="4" labelSpanM="4"
				layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024" width="100%">
				<f:content>
					<Label id="labelall" text="Allowance Type"/>
					<Input showValueHelp="true" valueHelpRequest="handleValueHelp" description="{Lgart}" liveChange="handleLiveSearch"
						placeholder="Enter Allowance Type ..." showSuggestion="true" id="allowanceInput" suggestionItemSelected="handleSuggestionSel" suggestionItems="{/VH_lgartSet}" type="Text"
						value="{Lgarttxt}" valueLiveUpdate="true">
						<suggestionItems>
							<core:Item text="{Lgtxt}"/>
						</suggestionItems>
					</Input>
					<Input id="quantity" value="{Anzhl}"/>
					<Label id="labelenote" text="Notes"/>
					<TextArea editable="true" id="Enote" rows="4" value="{Enote}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<OverflowToolbar>
				<!--<OverflowToolbarButton icon="sap-icon://favorite" press="handleFavourites" text="Favorite"/>-->
				<ToolbarSpacer/>
				<Button press="handleSendRequest" text="Send" type="Accept">
					<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
				</Button>
				<!--<OverflowToolbarButton text="Send"  icon="sap-icon://email"/>-->
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>