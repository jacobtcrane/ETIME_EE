<mvc:View
	controllerName="com.transfieldservices.view.Master"
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page id="master1Page" title="{i18n>master1Title}">
		<!--<headerContent>-->
		<!--</headerContent>-->
		<subHeader>
			<Bar id="master1SearchBar">
				<contentMiddle>
					<SearchField
						id="master1SearchField"
						showRefreshButton="{device>/isNoTouch}"
						placeholder="{i18n>master1SearchPlaceholder}"
						liveChange="onSearch"
						tooltip="{i18n>master1SearchTooltip}"
						width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<!--<l:VerticalLayout>-->
		<content>
			<mvc:XMLView displayBlock="true" height="140px" id="headSelect" viewName="com.transfieldservices.view.HeaderSelection"/>
			<mvc:XMLView displayBlock="true" height="100px" id="headSummary" viewName="com.transfieldservices.view.HeaderSummary"/>
			<List
				id="master1List"
				items="{/overviewSet}"
				mode="{device>/listMode}"
				noDataText="{i18n>masterListNoDataText}"
				select="onSelect"
                growing="true"
				growingScrollToLoad="true">
				<items>
					<ObjectListItem
					    id="master1ListItem"
						type="{device>/listItemType}"
						press="onSelect" 
						title="{Datetxt}">
						<attributes>
							<ObjectAttribute text="{Hourstxt}"/>
							<ObjectAttribute text="{Statustxt}"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<dependents>
			<core:Fragment fragmentName="com.transfieldservices.dialogs.BusyDialog" type="XML">
			</core:Fragment>
		</dependents>
		<!--</l:VerticalLayout>-->
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>